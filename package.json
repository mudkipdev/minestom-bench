{
    "name": "localbench",
    "version": "1.0.0",
    "type": "module",
    "main": "src/index.ts",
    "scripts": {
        "start": "bun run src/index.ts",
        "dev": "bun run --watch src/index.ts",
        "build": "bun build src/index.ts --outdir ./dist --target bun",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\""
    },
    "dependencies": {
        "openai": "^4.73.0",
        "dotenv": "^16.4.7"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "prettier": "^3.4.2",
        "typescript": "^5.7.2"
    }
}
